{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "width": 800,
    "height": 600,
    "title": "Cardiovascular Disease Death Rates per Country (2021)",
    "data": {
      "url": "https://raw.githubusercontent.com/mmio0004/DataViz2/main/data/Cardiovascular_Death_Rate_Dataset_with_Continents__2021_.csv"
    },
    "params": [
      {
        "name": "Population_Above",
        "value": 0,
        "bind": {
          "input": "range",
          "min": 0,
          "max": 1000000000,
          "step": 10000000,
          "name": "Minimum Population: "
        }
      },
      {
        "name": "Continent_selection",
        "bind": {
          "input": "select",
          "options": [
            null,
            "Africa",
            "Asia",
            "Europe",
            "Americas",
            "Oceania"
          ],
          "labels": [
            "Show All",
            "Africa",
            "Asia",
            "Europe",
            "Americas",
            "Oceania"
          ],
          "name": "Continent Selection: "
        }
      }
    ],
    "transform": [
      {"filter": "datum['Age-standardized death rate from cardiovascular diseases among both sexes'] > 0"},
      {"filter": "datum['Population (historical)'] > Population_Above"},
      {
        "filter": "Continent_selection == null || datum.Continent == Continent_selection"
      }
    ],
    "encoding": {
      "x": {
        "field": "GDP per capita, PPP (constant 2017 international $)",
        "type": "quantitative",
        "title": "GDP per capita (constant 2017 international $)",
        "axis": {"tickCount": 7},
        "scale": {"type": "log", "domain": [1, 120000]}
      },
      "y": {
        "field": "Age-standardized death rate from cardiovascular diseases among both sexes",
        "type": "quantitative",
        "title": "Cardiovascular Disease Death Rate (per 100,000)",
        "axis": {"tickCount": 6},
        "scale": {"type": "log", "domain": [1, 1000]}
      }
    },
    "layer": [
      {
        "mark": "circle",
        "encoding": {
          "size": {
            "field": "Population (historical)",
            "type": "quantitative",
            "scale": {
              "type": "threshold",
              "domain": [1000000, 10000000, 50000000, 100000000, 500000000],
              "range": [10, 50, 150, 200, 300, 400]
            },
            "legend": {"format": ".1s"}
          },
          "color": {
            "field": "Continent",
            "type": "nominal",
            "scale": {
              "domain": [
                "Africa",
                "Asia",
                "Europe",
                "Americas",
                "Oceania"
              ],
              "range": [
                "#e41a1c",
                "#377eb8",
                "#4daf4a",
                "#984ea3",
                "#ff7f00"
              ]
            }
          },
          "opacity": {"value": 0.6},
          "tooltip": [
            {"field": "Entity", "type": "nominal", "title": "Country"},
            {"field": "GDP per capita, PPP (constant 2017 international $)", "type": "quantitative", "title": "GDP per capita"},
            {"field": "Age-standardized death rate from cardiovascular diseases among both sexes", "type": "quantitative", "title": "Death Rate"},
            {"field": "Population (historical)", "type": "quantitative", "title": "Population"}
          ]
        }
      },
      {
        "mark": {
          "type": "text",
          "align": "right",
          "baseline": "middle",
          "dx": -12,
          "fontSize": 11.5,
          "fontStyle": "italic"
        },
        "encoding": {
          "text": {"field": "Entity", "type": "nominal"},
          "color": {"value": "black"},
          "opacity": {
            "condition": {
              "test": "datum['Entity'] == 'China' || datum['Entity'] == 'United States' || datum['Entity'] == 'India'",
              "value": 1
            },
            "value": 0
          }
        }
      }
    ]
  }
  