{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "description": "A layered sunburst chart showing cardiovascular disease death rates by type and gender.",
  "width": 831,
  "height": 400,
  "layer": [
    {
      "data": {
        "url": "https://raw.githubusercontent.com/mmio0004/DataViz2/main/data/Modified_Sunburst_Dataset_Rounded_all_types.csv"
      },
      "transform": [
        {
          "aggregate": [
            {"op": "sum", "field": "Value", "as": "TotalValue"}
          ],
          "groupby": ["Reason"]
        }
      ],
      "mark": {
        "type": "arc",
        "innerRadius": 40,
        "stroke": "black",
        "strokeWidth": 2
      },
      "encoding": {
        "theta": {
          "field": "TotalValue",
          "type": "quantitative"
        },
        "color": {
          "field": "Reason",
          "type": "nominal",
          "scale": {
            "domain": ["Ischemic heart disease", "Stroke", "Hypertensive heart disease", "Cardiomyopathy and myocarditis", "Rheumatic heart disease"],
            "range": ["#33A2D8", "#61AF17", "#924444", "#fd8b17", "#7B4596",               
            "#74B7D8", "#a6cee3", 
            "#9BE05D", "#b2df8a",
            "#a94c4c", "#c17171",
            "#ffa242", "#ffc367",
            "#A97DBF", "#cab2d6"]
          },
          "legend": {
            "orient": "right",
            "title": "Cardiovascular Disease Type and Gender Categories",
            "labelFontSize": 11,
            "titleFontSize": 11,
            "titleLimit": 300, 
            "labelLimit": 300,
            "offset": -180
          }
        },
        "tooltip": [
          {"field": "Reason", "type": "nominal", "title": "Cardiovascular Disease Type"},
          {"field": "TotalValue", "type": "quantitative", "title": "Total Death Rate (per 100,000 People)"}
        ]
      }
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/mmio0004/DataViz2/main/data/Modified_Sunburst_Dataset_Rounded_all_types.csv"
      },
      "transform": [
        {
          "calculate": "split(datum['By Gender'], '-')[1]",
          "as": "Gender"
        }
      ],
      "mark": {
        "type": "arc",
        "innerRadius": 100,
        "stroke": "black",
        "strokeWidth": 2
      },
      "encoding": {
        "theta": {
          "field": "Value",
          "type": "quantitative"
        },
        "color": {
          "field": "By Gender",
          "type": "nominal",
          "scale": {
            "domain": [
              "Ischemic heart disease-Male", "Ischemic heart disease-Female",
              "Stroke-Male", "Stroke-Female",
              "Hypertensive heart disease-Male", "Hypertensive heart disease-Female",
              "Cardiomyopathy and myocarditis-Male", "Cardiomyopathy and myocarditis-Female",
              "Rheumatic heart disease-Male", "Rheumatic heart disease-Female"
            ],
            "range": [
              "#74B7D8", "#a6cee3", 
              "#9BE05D", "#b2df8a",
              "#DCA17E", "#D07F52",
              "#E8A03D", "#F1BD77",
              "#A97DBF", "#cab2d6" 
            ]
          },
          "legend": null
        },
        "tooltip": [
          {"field": "Gender", "type": "nominal", "title": "Gender"},
          {"field": "Reason", "type": "nominal", "title": "Cardiovascular Disease Type"},
          {"field": "Value", "type": "quantitative", "title": "Death Rate (per 100,000 People)"}
        ]
      }
    }
  ]
}
