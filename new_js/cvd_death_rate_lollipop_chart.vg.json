{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": 945,
  "height": 600,
  "description": "Lollipop chart representing cardiovascular disease death rates by continent (2021)",
  "data": {
    "url": "https://raw.githubusercontent.com/mmio0004/DataViz2/main/data/Cleaned_CVD_Dataset_with_Continents_2021.csv"
  },
  "layer": [
    {
      "description": "Lollipop Stick",
      "mark": {
        "type": "rule",
        "strokeWidth": 7
      },
      "encoding": {
        "x": {
          "field": "Age-standardized death rate from cardiovascular diseases among both sexes",
          "type": "quantitative",
          "title": "Death Rate (per 100,000 People)"
        },
        "x2": {"value": 0},
        "y": {
          "field": "Entity",
          "type": "ordinal",
          "title": "Continent",
          "sort": "-x"
        },
        "color": {
          "condition": {
            "test": "datum.Entity === 'Africa'",
            "value": "#a53922"
          },
          "value": "#d3d3d3"
        }
      }
    },
    {
      "description": "Lollipop",
      "mark": {
        "type": "point",
        "filled": true,
        "size": 1500,
        "opacity": 1,
        "tooltip": true
      },
      "encoding": {
        "x": {
          "field": "Age-standardized death rate from cardiovascular diseases among both sexes",
          "type": "quantitative"
        },
        "y": {
          "field": "Entity",
          "type": "ordinal",
          "sort": "-x"
        },
        "color": {
          "condition": {
            "test": "datum.Entity === 'Africa'",
            "value": "#a53922"
          },
          "value": "#d3d3d3"
        },
        "tooltip": [
          {
            "field": "Entity",
            "title": "Continent"
          },
          {
            "field": "Age-standardized death rate from cardiovascular diseases among both sexes",
            "title": "Death Rate (per 100,000 People)",
            "format": ".2f"
          }
        ]
      }
    },
    {
      "description": "Text Annotation for Africa - Line 1",
      "mark": {
        "type": "text",
        "align": "left",
        "dx": -140,
        "dy": 30,
        "fontSize": 11,
        "fontWeight": "bold",
        "color": "black"
      },
      "encoding": {
        "x": {
          "field": "Age-standardized death rate from cardiovascular diseases among both sexes",
          "type": "quantitative"
        },
        "y": {
          "field": "Entity",
          "type": "ordinal",
          "sort": "-x"
        },
        "text": {
          "condition": {
            "test": "datum.Entity === 'Africa'",
            "value": "Africaâ€™s cardiovascular death rate"
          }
        }
      }
    },
    {
      "description": "Text Annotation for Africa - Line 2",
      "mark": {
        "type": "text",
        "align": "left",
        "dx": -140,
        "dy": 43, 
        "fontSize": 11,
        "fontWeight": "bold",
        "color": "black"
      },
      "encoding": {
        "x": {
          "field": "Age-standardized death rate from cardiovascular diseases among both sexes",
          "type": "quantitative"
        },
        "y": {
          "field": "Entity",
          "type": "ordinal",
          "sort": "-x"
        },
        "text": {
          "condition": {
            "test": "datum.Entity === 'Africa'",
            "value": "is the highest globally, reflecting"
          }
        }
      }
    },
    {
      "description": "Text Annotation for Africa - Line 3",
      "mark": {
        "type": "text",
        "align": "left",
        "dx": -140,
        "dy": 56, 
        "fontSize": 11,
        "fontWeight": "bold",
        "color": "black"
      },
      "encoding": {
        "x": {
          "field": "Age-standardized death rate from cardiovascular diseases among both sexes",
          "type": "quantitative"
        },
        "y": {
          "field": "Entity",
          "type": "ordinal",
          "sort": "-x"
        },
        "text": {
          "condition": {
            "test": "datum.Entity === 'Africa'",
            "value": "severe healthcare challenges."
          }
        }
      }
    }
  ]
}
