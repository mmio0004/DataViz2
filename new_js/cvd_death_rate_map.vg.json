{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": 825,
  "height": 400,
  "data": {
    "url": "https://raw.githubusercontent.com/mmio0004/W9_Homework/main/ne_110m_admin_0_countries.json",
    "format": {"type": "topojson", "feature": "ne_110m_admin_0_countries"}
  },
  "projection": {"type": "equalEarth"},
  "layer": [
    {
      "data": {
        "url": "https://raw.githubusercontent.com/mmio0004/W9_Homework/main/oceans.topo.json",
        "format": {"type": "topojson", "feature": "oceans"}
      },
      "mark": {
        "type": "geoshape",
        "fill": "skyblue"
      }
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/mmio0004/W9_Homework/main/WorldMapWithGraticules.topojson",
        "format": {"type": "topojson", "feature": "ne_110m_graticules_30"}
      },
      "mark": {
        "type": "geoshape",
        "fill": null,
        "stroke": "lightgray"
      }
    },
    {
      "transform": [
        {
          "calculate": "'Data is not available in ' + datum.properties.NAME",
          "as": "note"
        }
      ],
      "mark": {
        "type": "geoshape",
        "fill": "lightgray",
        "stroke": "white"
      },
      "encoding": {
        "tooltip": {"field": "note"}
      }
    },
    {
      "selection": {
        "clicked_country": {
          "type": "single",
          "fields": ["properties.NAME"]
        }
      },
      "transform": [
        {
          "lookup": "properties.NAME",
          "from": {
            "data": {
              "url": "https://raw.githubusercontent.com/mmio0004/DataViz2/main/data/Cleaned_Cardiovascular_Disease_Death_Rate_Data__2021.csv"
            },
            "key": "Entity",
            "fields": ["Age-standardized death rate from cardiovascular diseases among both sexes"]
          }
        }
      ],
      "mark": {
        "type": "geoshape",
        "stroke": "white"
      },
      "encoding": {
        "color": {
          "condition": {
            "param": "clicked_country",
            "field": "Age-standardized death rate from cardiovascular diseases among both sexes",
            "type": "quantitative",
            "title": "Death Rate (per 100,000 People)",
            "scale": {
              "type": "threshold",
              "domain": [100, 200, 300, 400, 500],
              "scheme": "oranges"
            },
            "legend": {
              "title": "Death Rate (per 100,000 People)",
              "format": ",.0f",
              "labelFontSize": 11,
              "titleFontSize": 11
            }
          },
          "value": "lightgray"
        },
        "tooltip": [
          {"field": "properties.NAME", "type": "nominal", "title": "Country"},
          {
            "field": "Age-standardized death rate from cardiovascular diseases among both sexes",
            "type": "quantitative",
            "title": "Death Rate (per 100,000 People)",
            "format": ".2f"
          }
        ]
      }
    },
    {
      "transform": [
        {"filter": "datum.properties.NAME == 'Canada'"},
        {"calculate": "-150", "as": "longitude"}, 
        {"calculate": "40", "as": "latitude"},
        {
          "calculate": "split('Canada\\'s Medicare \\n system offers free \\n preventive care \\n and early treatment', '\\n')",

          "as": "annotationText"
        }
      ],
      "mark": {"type": "text", "dx": 0, "dy": 0, "color": "black"},
      "encoding": {
        "longitude": {"field": "longitude"},
        "latitude": {"field": "latitude"},
        "text": {"field": "annotationText"}
      }
    },
    {
      "transform": [
        {"filter": "datum.properties.NAME == 'Canada'"},
        {"calculate": "-110", "as": "longitude"},
        {"calculate": "60", "as": "latitude"},
        {"calculate": "-150", "as": "longitude2"},
        {"calculate": "43", "as": "latitude2"} 
      ],
      "mark": {"type": "rule", "stroke": "black", "strokeWidth": 1},
      "encoding": {
        "longitude": {"field": "longitude"},
        "latitude": {"field": "latitude"},
        "longitude2": {"field": "longitude2"},
        "latitude2": {"field": "latitude2"}
      }
    },
    {
      "transform": [
        {"filter": "datum.properties.NAME == 'Japan'"},
        {"calculate": "155", "as": "longitude"},
        {"calculate": "27", "as": "latitude"}, 
        {
          "calculate": "split('Japan\\'s healthcare \\n system ensures \\n universal coverage \\n for all citizens', '\\n')",
          "as": "annotationText"
        }
      ],
      "mark": {"type": "text", "dx": 0, "dy": 0, "color": "black"},
      "encoding": {
        "longitude": {"field": "longitude"},
        "latitude": {"field": "latitude"},
        "text": {"field": "annotationText"}
      }
    },
    {
      "transform": [
        {"filter": "datum.properties.NAME == 'Japan'"},
        {"calculate": "155", "as": "longitude"},
        {"calculate": "30", "as": "latitude"}, 
        {"calculate": "138", "as": "longitude2"},
        {"calculate": "35", "as": "latitude2"}   
      ],
      "mark": {"type": "rule", "stroke": "black", "strokeWidth": 1},
      "encoding": {
        "longitude": {"field": "longitude"},
        "latitude": {"field": "latitude"},
        "longitude2": {"field": "longitude2"},
        "latitude2": {"field": "latitude2"}
      }
    },
    {
      "transform": [
        {"filter": "datum.properties.NAME == 'Indonesia'"},
        {"calculate": "80", "as": "longitude"},
        {"calculate": "-5", "as": "latitude"},  
        {
          "calculate": "split('Indonesia\\'s high \\n cardiovascular death \\n rates are mainly due \\n to high smoking rates', '\\n')",
          "as": "annotationText"
        }
      ],
      "mark": {"type": "text", "dx": 0, "dy": 0, "color": "black"},
      "encoding": {
        "longitude": {"field": "longitude"},
        "latitude": {"field": "latitude"},
        "text": {"field": "annotationText"}
      }
    },
    {
      "transform": [
        {"filter": "datum.properties.NAME == 'Indonesia'"},
        {"calculate": "99", "as": "longitude"},
        {"calculate": "3", "as": "latitude"},  
        {"calculate": "85", "as": "longitude2"}, 
        {"calculate": "-2", "as": "latitude2"}  
      ],
      "mark": {"type": "rule", "stroke": "black", "strokeWidth": 1},
      "encoding": {
        "longitude": {"field": "longitude"},
        "latitude": {"field": "latitude"},
        "longitude2": {"field": "longitude2"},
        "latitude2": {"field": "latitude2"}
      }
    },
    {
      "transform": [
        {"filter": "datum.properties.NAME == 'Australia'"},
        {"calculate": "115", "as": "longitude"},
        {"calculate": "-47", "as": "latitude"},
        {
          "calculate": "split('Australia\\'s top healthcare system \\n lowers cardiovascular death rates', '\\n')",
          "as": "annotationText"
        }
      ],
      "mark": {"type": "text", "dx": 0, "dy": 0, "color": "black"},
      "encoding": {
        "longitude": {"field": "longitude"},
        "latitude": {"field": "latitude"},
        "text": {"field": "annotationText"}
      }
    },
    {
      "transform": [
        {"filter": "datum.properties.NAME == 'Australia'"},
        {"calculate": "130", "as": "longitude"},
        {"calculate": "-27", "as": "latitude"}, 
        {"calculate": "115", "as": "longitude2"},
        {"calculate": "-44", "as": "latitude2"}   
      ],
      "mark": {"type": "rule", "stroke": "black", "strokeWidth": 1},
      "encoding": {
        "longitude": {"field": "longitude"},
        "latitude": {"field": "latitude"},
        "longitude2": {"field": "longitude2"},
        "latitude2": {"field": "latitude2"}
      }
    }
    
  ]
}
