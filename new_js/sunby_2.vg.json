{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "description": "A layered donut chart with matching colors between segments and legend.",
  "width": 831,
  "height": 400,
  "layer": [
    {
      "data": {
        "url": "https://raw.githubusercontent.com/mmio0004/DataViz2/main/data/Modified_Sunburst_Dataset_Rounded_all_types.csv"
      },
      "transform": [
        {
          "aggregate": [
            {"op": "sum", "field": "Value", "as": "TotalValue"}
          ],
          "groupby": ["Reason"]
        }
      ],
      "mark": {
        "type": "arc",
        "innerRadius": 40,
        "stroke": "black",
        "strokeWidth": 2
      },
      "encoding": {
        "theta": {
          "field": "TotalValue",
          "type": "quantitative"
        },
        "color": {
          "field": "Reason",
          "type": "nominal",
          "scale": {
            "domain": ["Ischemic heart disease", "Stroke", "Hypertensive heart disease", "Cardiomyopathy and myocarditis", "Rheumatic heart disease"],
            "range": ["#d49e75", "#d475ab", "#8e6c8a", "#468f96", "#837465"]
          },
          "legend": {
            "orient": "top-right",
            "titleLimit": 200, 
            "labelLimit": 300,
            "labelFontSize": 11, 
            "titleFontSize": 11
          }
        },
        "tooltip": [
          {"field": "Reason", "type": "nominal", "title": "Reason"},
          {"field": "TotalValue", "type": "quantitative", "title": "Total Value"}
        ]
      }
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/mmio0004/DataViz2/main/data/Modified_Sunburst_Dataset_Rounded_all_types.csv"
      },
      "transform": [
        {
          "calculate": "split(datum['By Gender'], '-')[1]",
          "as": "Gender"
        }
      ],
      "mark": {
        "type": "arc",
        "innerRadius": 100,
        "stroke": "black",
        "strokeWidth": 2
      },
      "encoding": {
        "theta": {
          "field": "Value",
          "type": "quantitative"
        },
        "color": {
          "field": "Reason",
          "type": "nominal",
          "scale": {
            "domain": ["Ischemic heart disease", "Stroke", "Hypertensive heart disease", "Cardiomyopathy and myocarditis", "Rheumatic heart disease"],
            "range": ["#d49e75", "#d475ab", "#8e6c8a", "#468f96", "#837465"] 
          },
          "legend": null
        },
        "tooltip": [
          {"field": "Gender", "type": "nominal", "title": "Gender"},
          {"field": "Reason", "type": "nominal", "title": "Cardiovascular Disease Type"},
          {"field": "Value", "type": "quantitative", "title": "Death Rate (per 100,000 People)"}
        ]
      }
    }
  ]
}
