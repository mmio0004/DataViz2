{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "description": "A layered donut chart with embedded data.",
  "width": 350,
  "height": 400,
  "data": {
    "values": [
      {"category": 1, "value": 4},
      {"category": 2, "value": 5},
      {"category": 3, "value": 6}
    ]
  },
  "layer": [
    {
      "data": {
          "url": "https://raw.githubusercontent.com/mmio0004/DataViz2/main/data/Modified_Sunburst_Dataset_Rounded_3_cvd_types.csv"
        },
        "transform": [
          {
            "aggregate": [
              {"op": "sum", "field": "Value", "as": "TotalValue"}
            ],
            "groupby": ["Reason"]
          }
        ],
      "mark": {
        "type": "arc",
        "innerRadius": 40,
        "stroke": "black",
        "strokeWidth": 2
      },
      "encoding": {
        "theta": {
          "field": "TotalValue",
          "type": "quantitative"
        },
      "color": {
        "field": "Reason",
        "type": "nominal",
        "scale": {
          "domain": ["Ischemic heart disease", "Stroke", "Hypertensive heart disease"],
          "range": ["#33A2D8", "#61AF17", "#924444",               
          "#74B7D8", "#a6cee3", 
          "#9BE05D", "#b2df8a",
          "#a94c4c", "#c17171"]
        },
        "legend": {
          "labelFontSize": 18,
          "titleFontSize": 19
      }
      },
        "tooltip": [
          {"field": "Reason", "type": "nominal", "title": "Reason"},
          {"field": "TotalValue", "type": "quantitative", "title": "Total Value"}
        ]
      }

          },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/mmio0004/DataViz2/main/data/Modified_Sunburst_Dataset_Rounded_3_cvd_types.csv"
      },
      "mark": {"type": "arc", "innerRadius": 100,        "stroke": "black",
      "strokeWidth": 2    },        "encoding": {
        "theta": {"field": "Value", "type": "quantitative"},
        "color": {
          "field": "By Gender",
          "type": "nominal",
          "scale": {
            "domain": [
              "Ischemic heart disease-Male", "Ischemic heart disease-Female",
              "Stroke-Male", "Stroke-Female",
              "Hypertensive heart disease-Male", "Hypertensive heart disease-Female"
            ],
            "range": [
              "#74B7D8", "#a6cee3", 
              "#9BE05D", "#b2df8a",
              "#DCA17E", "#D07F52"   
            ]
          },
                  "legend": {
                      "labelFontSize": 18,
                      "titleFontSize": 19
                  }
        },
          "order": {"field": "Order", "type": "quantitative"},
        "tooltip": [
          {"field": "By Gender", "type": "nominal", "title": "Reason by Gender"},
          {"field": "Reason", "type": "nominal", "title": "Reason"},
          {"field": "Gender", "type": "nominal", "title": "Gender"},
          {"field": "Value", "type": "quantitative", "title": "Value"},
          {"field": "Order", "type": "quantitative", "title": "Order"}

        ]
      }
    }
  ]
}
